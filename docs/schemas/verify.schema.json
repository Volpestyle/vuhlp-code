{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/forge/schemas/verify.schema.json",
  "title": "Forge Verify Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "compliant",
    "summary",
    "doc_alignment",
    "policy",
    "verification_commands",
    "next_actions"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "forge.verify.v1"
    },
    "compliant": {
      "type": "boolean"
    },
    "summary": {
      "type": "string"
    },
    "doc_alignment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "compliant",
        "mismatches"
      ],
      "properties": {
        "compliant": {
          "type": "boolean"
        },
        "mismatches": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "severity",
              "doc_ref",
              "file",
              "description",
              "suggested_fix"
            ],
            "properties": {
              "severity": {
                "type": "string",
                "enum": [
                  "error",
                  "warn"
                ]
              },
              "doc_ref": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "path",
                  "heading"
                ],
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "heading": {
                    "type": "string"
                  }
                }
              },
              "file": {
                "type": "string"
              },
              "line_range": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "description": {
                "type": "string"
              },
              "suggested_fix": {
                "type": "string"
              }
            }
          },
          "default": []
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "forbidden_paths_touched",
        "env_prod_changed",
        "env_prod_synced",
        "readme_missing",
        "docs_diagrams_out_of_date"
      ],
      "properties": {
        "forbidden_paths_touched": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "env_prod_changed": {
          "type": "boolean"
        },
        "env_prod_synced": {
          "type": "boolean"
        },
        "readme_missing": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "docs_diagrams_out_of_date": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "verification_commands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "command",
          "status",
          "exit_code"
        ],
        "properties": {
          "command": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "passed",
              "failed",
              "skipped"
            ]
          },
          "exit_code": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "default": []
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  }
}