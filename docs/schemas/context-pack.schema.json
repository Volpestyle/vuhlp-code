{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ContextPack",
  "type": "object",
  "required": [
    "packId",
    "goal",
    "definitionOfDone",
    "globalMode",
    "docsRoot",
    "docRefs"
  ],
  "properties": {
    "packId": { "type": "string", "format": "uuid" },
    "runId": { "type": "string" },
    "nodeId": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },

    "goal": { "type": "string", "description": "Objective in 1â€“3 sentences." },
    "definitionOfDone": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Checklist items the node must satisfy."
    },

    "globalMode": { "type": "string", "enum": ["planning", "implementation"] },
    "nodeMode": { "type": "string", "enum": ["auto", "interactive"] },

    "docsRoot": { "type": "string", "default": "/docs" },
    "docRefs": {
      "type": "array",
      "items": { "$ref": "#/definitions/DocRef" },
      "default": []
    },

    "repoFacts": {
      "type": "object",
      "description": "Small set of facts about language/tooling/entrypoints.",
      "additionalProperties": true
    },

    "workspace": {
      "type": "object",
      "properties": {
        "mode": { "type": "string", "enum": ["shared", "worktree", "copy"] },
        "rootPath": { "type": "string" },
        "worktreePath": { "type": "string" },
        "branch": { "type": "string" }
      },
      "additionalProperties": false
    },

    "relevantFiles": {
      "type": "array",
      "items": { "$ref": "#/definitions/RelevantFile" },
      "default": []
    },

    "inputs": {
      "type": "array",
      "description": "References to upstream payload envelopes.",
      "items": { "$ref": "#/definitions/PayloadRef" },
      "default": []
    },

    "artifacts": {
      "type": "array",
      "items": { "$ref": "#/definitions/ArtifactRef" },
      "default": []
    },

    "decisions": {
      "type": "array",
      "items": { "$ref": "#/definitions/Decision" },
      "default": []
    },

    "constraints": {
      "type": "object",
      "description": "Hard constraints (no deps, style, compat).",
      "additionalProperties": true
    },

    "toolPolicy": {
      "type": "object",
      "description": "Allowed/blocked tools and approval rules.",
      "additionalProperties": true
    },

    "outputSchemaRef": {
      "type": "string",
      "description": "Pointer to expected output schema (path, artifact ref, or URL)."
    }
  },
  "additionalProperties": false,
  "definitions": {
    "DocRef": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" },
        "anchors": { "type": "array", "items": { "type": "string" }, "default": [] },
        "excerpt": { "type": "string" },
        "priority": { "type": "string", "enum": ["low", "medium", "high"], "default": "medium" }
      },
      "additionalProperties": false
    },

    "RelevantFile": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": { "type": "string" },
        "purpose": { "type": "string" },
        "excerpt": { "type": "string" },
        "hash": { "type": "string" }
      },
      "additionalProperties": false
    },

    "ArtifactRef": {
      "type": "object",
      "required": ["ref", "type"],
      "properties": {
        "ref": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["diff", "log", "file", "report", "verification", "context_pack", "unknown"]
        },
        "summary": { "type": "string" },
        "sha256": { "type": "string" }
      },
      "additionalProperties": false
    },

    "PayloadRef": {
      "type": "object",
      "required": ["payloadId"],
      "properties": {
        "payloadId": { "type": "string", "format": "uuid" },
        "fromNodeId": { "type": "string" },
        "edgeId": { "type": "string" }
      },
      "additionalProperties": false
    },

    "Decision": {
      "type": "object",
      "required": ["id", "summary"],
      "properties": {
        "id": { "type": "string" },
        "summary": { "type": "string" },
        "rationale": { "type": "string" },
        "links": { "type": "array", "items": { "type": "string" }, "default": [] }
      },
      "additionalProperties": false
    }
  }
}
