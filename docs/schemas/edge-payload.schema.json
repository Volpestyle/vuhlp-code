{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Envelope",
  "type": "object",
  "required": ["kind", "fromNodeId", "toNodeId", "payload"],
  "properties": {
    "kind": { "type": "string", "enum": ["handoff", "signal"] },
    "fromNodeId": { "type": "string" },
    "toNodeId": { "type": "string" },
    "payload": {
      "type": "object",
      "properties": {
        "message": { "type": "string" },
        "structured": { "type": "object", "additionalProperties": true },
        "artifacts": {
          "type": "array",
          "items": { "$ref": "#/definitions/ArtifactRef" }
        },
        "status": {
          "type": "object",
          "properties": {
            "ok": { "type": "boolean" },
            "reason": { "type": "string" }
          },
          "required": ["ok"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ArtifactRef": {
      "type": "object",
      "required": ["type", "ref"],
      "properties": {
        "type": { "type": "string" },
        "ref": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
