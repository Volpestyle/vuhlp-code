{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EdgePayloadEnvelope",
  "type": "object",
  "required": ["payloadId", "kind", "fromNodeId", "edgeId", "createdAt", "status"],
  "properties": {
    "payloadId": { "type": "string", "format": "uuid" },
    "kind": {
      "type": "string",
      "description": "High-level payload type used for routing and join semantics.",
      "enum": [
        "message",
        "structured",
        "diff",
        "verification",
        "report",
        "join",
        "tick",
        "artifact_ref",
        "unknown"
      ]
    },
    "fromNodeId": { "type": "string" },
    "edgeId": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "status": {
      "type": "object",
      "required": ["ok"],
      "properties": {
        "ok": { "type": "boolean" },
        "code": { "type": "string" },
        "reason": { "type": "string" }
      },
      "additionalProperties": false
    },
    "message": {
      "type": "object",
      "required": ["content"],
      "properties": {
        "content": { "type": "string" },
        "format": { "type": "string", "enum": ["text", "markdown", "json"] }
      },
      "additionalProperties": false
    },
    "structured": {
      "type": "object",
      "description": "Structured output payload. Schema is task-specific.",
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "#/definitions/ArtifactRef" },
      "default": []
    },
    "contextPackRef": {
      "$ref": "#/definitions/ArtifactRef",
      "description": "Reference to a stored context pack artifact. Prefer refs over embedding huge context." 
    },
    "provenance": {
      "type": "object",
      "description": "Optional provider-specific provenance fields.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ArtifactRef": {
      "type": "object",
      "required": ["ref", "type"],
      "properties": {
        "ref": {
          "type": "string",
          "description": "artifact://... or a path/id understood by the vuhlp artifact store"
        },
        "type": {
          "type": "string",
          "enum": ["diff", "log", "file", "report", "verification", "context_pack", "unknown"]
        },
        "mime": { "type": "string" },
        "summary": { "type": "string" },
        "sha256": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
