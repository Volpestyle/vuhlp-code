{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VuhlpPlan",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "instructions": {
            "type": "string"
          },
          "agentHint": {
            "type": "string",
            "enum": [
              "codex",
              "claude",
              "gemini",
              "mock",
              "any"
            ],
            "default": "any"
          },
          "deps": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        },
        "required": [
          "id",
          "title",
          "instructions"
        ]
      }
    },
    "acceptanceCriteria": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "checkType": {
            "type": "string",
            "enum": [
              "test",
              "lint",
              "build",
              "manual",
              "doc_exists",
              "custom"
            ]
          },
          "checkCommand": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "description",
          "checkType"
        ]
      }
    }
  },
  "required": [
    "steps"
  ]
}
