{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/forge/schemas/plan.schema.json",
  "title": "Forge Plan Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "goal",
    "target",
    "doc_refs",
    "constraints",
    "plan",
    "behavior_change",
    "doc_updates_required",
    "risk",
    "test_plan",
    "rollback_plan",
    "acceptance_criteria",
    "out_of_scope",
    "questions",
    "estimated_files_changed_max"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "forge.plan.v1"
    },
    "goal": {
      "type": "string",
      "minLength": 1
    },
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "package",
        "packages",
        "paths_hint"
      ],
      "properties": {
        "package": {
          "type": [
            "string",
            "null"
          ]
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "paths_hint": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "doc_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "heading",
          "rationale",
          "confidence"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "heading": {
            "type": "string",
            "minLength": 1
          },
          "rationale": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "docs_as_contract",
        "no_secrets",
        "diff_only",
        "pnpm_monorepo",
        "aws_serverless",
        "env_sync_command"
      ],
      "properties": {
        "docs_as_contract": {
          "type": "boolean",
          "const": true
        },
        "no_secrets": {
          "type": "boolean",
          "const": true
        },
        "diff_only": {
          "type": "boolean",
          "const": true
        },
        "pnpm_monorepo": {
          "type": "boolean",
          "const": true
        },
        "aws_serverless": {
          "type": "boolean",
          "const": true
        },
        "env_sync_command": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "summary",
          "doc_ref_ids",
          "files_to_modify",
          "files_to_create",
          "commands",
          "notes"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "doc_ref_ids": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0
            }
          },
          "files_to_modify": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "files_to_create": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "behavior_change": {
      "type": "boolean"
    },
    "doc_updates_required": {
      "type": "boolean"
    },
    "doc_updates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "summary",
          "diagrams_updated"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "diagrams_updated": {
            "type": "boolean"
          }
        }
      },
      "default": []
    },
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "test_plan": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "rollback_plan": {
      "type": "string"
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "out_of_scope": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "estimated_files_changed_max": {
      "type": "integer",
      "minimum": 1
    }
  }
}