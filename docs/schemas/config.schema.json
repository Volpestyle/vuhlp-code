{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VuhlpConfig",
  "type": "object",
  "properties": {
    "server": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "default": 4317
        }
      },
      "additionalProperties": false
    },
    "dataDir": {
      "type": "string",
      "default": ".vuhlp"
    },
    "providers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "kind": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "default": {}
          }
        },
        "required": [
          "kind"
        ]
      }
    },
    "roles": {
      "type": "object",
      "properties": {
        "investigator": {
          "type": "string",
          "default": "mock"
        },
        "planner": {
          "type": "string",
          "default": "mock"
        },
        "implementer": {
          "type": "string",
          "default": "mock"
        },
        "reviewer": {
          "type": "string",
          "default": "mock"
        }
      }
    },
    "scheduler": {
      "type": "object",
      "properties": {
        "maxConcurrency": {
          "type": "integer",
          "default": 3
        }
      }
    },
    "orchestration": {
      "type": "object",
      "properties": {
        "maxIterations": {
          "type": "integer",
          "default": 3
        }
      }
    },
    "workspace": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "shared",
            "worktree",
            "copy"
          ],
          "default": "shared"
        },
        "rootDir": {
          "type": "string",
          "default": ".vuhlp/workspaces"
        }
      }
    },
    "verification": {
      "type": "object",
      "properties": {
        "commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    }
  },
  "additionalProperties": false
}