{
  "server": {
    "port": 4317
  },
  "dataDir": ".vuhlp",
  "providers": {
    "mock": {
      "kind": "mock"
    },
    "codex": {
      "kind": "codex-cli",
      "command": "codex",
      "sandboxMode": "read-only",
      "askForApproval": "never",
      "injectAgentsMd": true
    },
    "claude": {
      "kind": "claude-cli",
      "command": "claude",
      "includePartialMessages": true,
      "injectClaudeMd": true
    },
    "gemini": {
      "kind": "gemini-cli",
      "command": "gemini"
    }
  },
  "defaultProvider": "claude",
  "scheduler": {
    "maxConcurrency": 3
  },
  "node": {
    "maxTurnsPerLoop": 10,
    "defaultMode": "interactive"
  },
  "workspace": {
    "mode": "shared",
    "rootDir": ".vuhlp/workspaces",
    "cleanupOnDone": false
  },
  "verification": {
    "commands": []
  },
  "planning": {
    "docsDirectory": "/docs/"
  }
}
