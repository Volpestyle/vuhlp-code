{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vulp.local/schemas/graph.schema.json",
  "title": "VulpGraph",
  "type": "object",
  "required": [
    "run_id",
    "nodes",
    "edges",
    "mode",
    "updated_at"
  ],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "enum": [
        "AUTO",
        "INTERACTIVE"
      ]
    },
    "updated_at": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/node"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/edge"
      }
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "required": [
        "id",
        "type",
        "status"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "IDLE",
            "READY",
            "RUNNING",
            "BLOCKED",
            "DONE",
            "ERROR"
          ]
        },
        "blocked_reason": {
          "type": "string"
        },
        "control": {
          "type": "string",
          "enum": [
            "AUTO",
            "MANUAL"
          ],
          "default": "AUTO"
        },
        "provider_session_id": {
          "type": "string"
        },
        "tmux": {
          "type": "object",
          "properties": {
            "session": {
              "type": "string"
            },
            "window": {
              "type": "string"
            },
            "pane_id": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "workspace": {
          "type": "string"
        },
        "last_output": {
          "$ref": "#/$defs/outputEnvelope"
        }
      },
      "additionalProperties": true
    },
    "edge": {
      "type": "object",
      "required": [
        "id",
        "from",
        "to"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "selector": {
          "type": "string",
          "enum": [
            "all",
            "summary",
            "structured",
            "artifacts"
          ],
          "default": "all"
        },
        "delivery": {
          "type": "string",
          "enum": [
            "latest",
            "queue"
          ],
          "default": "latest"
        }
      },
      "additionalProperties": false
    },
    "outputEnvelope": {
      "type": "object",
      "required": [
        "kind",
        "node_id",
        "turn_id",
        "status",
        "summary",
        "artifacts"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "node_result"
        },
        "node_id": {
          "type": "string"
        },
        "turn_id": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "ok",
            "error"
          ]
        },
        "summary": {
          "type": "string"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "path"
            ],
            "properties": {
              "type": {
                "type": "string"
              },
              "path": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "structured": {
          "type": [
            "object",
            "null"
          ]
        }
      },
      "additionalProperties": true
    }
  }
}