{
  "server": {
    "port": 4317
  },
  "dataDir": ".vuhlp",
  "providers": {
    "codex": {
      "kind": "codex-cli",
      "command": "codex",
      "args": [
        "exec",
        "--json"
      ]
    },
    "claude": {
      "kind": "claude-cli",
      "command": "claude",
      "args": [
        "-p",
        "{prompt}",
        "--output-format",
        "stream-json"
      ]
    },
    "gemini": {
      "kind": "gemini-cli",
      "command": "gemini",
      "approvalMode": "auto_edit",
      "allowedTools": "read_file,write_file,run_command,list_files,search_files,activate_skill,glob"
    }
  },
  "roles": {
    "investigator": "gemini",
    "planner": "gemini",
    "implementer": "gemini",
    "reviewer": "gemini"
  },
  "scheduler": {
    "maxConcurrency": 3
  },
  "orchestration": {
    "maxIterations": 3,
    "maxTurnsPerNode": 2,
    "defaultRunMode": "INTERACTIVE"
  },
  "workspace": {
    "mode": "shared",
    "rootDir": ".vuhlp/workspaces",
    "cleanupOnDone": false
  },
  "verification": {
    "commands": [
      "echo \"No verification configured\" && exit 0"
    ]
  },
  "defaultProvider": "mock",
  "planning": {
    "docsDirectory": "docs"
  },
  "node_defaults": {
    "defaultMode": "auto",
    "maxTurnsPerLoop": 10
  },
  "logging": {
    "level": "info",
    "dir": "logs",
    "retentionDays": "14d"
  }
}