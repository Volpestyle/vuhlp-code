{
  "server": {
    "port": 4317
  },
  "dataDir": ".vuhlp",
  "providers": {
    "codex": {
      "kind": "codex-cli",
      "command": "codex",
      "args": [
        "exec",
        "--json"
      ]
    },
    "claude": {
      "kind": "claude-cli",
      "command": "claude",
      "args": [
        "-p",
        "{prompt}",
        "--output-format",
        "stream-json"
      ]
    },
    "gemini": {
      "kind": "gemini-cli",
      "command": "gemini",
      "args": [
        "-p",
        "{prompt}",
        "--output-format",
        "json"
      ]
    }
  },
  "roles": {
    "investigator": "claude",
    "planner": "claude",
    "implementer": "claude",
    "reviewer": "claude"
  },
  "scheduler": {
    "maxConcurrency": 3
  },
  "orchestration": {
    "maxIterations": 3
  },
  "workspace": {
    "mode": "shared",
    "rootDir": ".vuhlp/workspaces"
  },
  "verification": {
    "commands": [
      "echo \"No verification configured\" && exit 0"
    ]
  }
}